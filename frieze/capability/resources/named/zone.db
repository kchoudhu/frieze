>>/usr/local/etc/namedb/dynamic/${zonecontainer.zone}.db
;
; Forward resolution for <${zonecontainer.zone}>
;
$TTL 604800
@   IN  SOA ${host.fqdn}. administrator.${zonecontainer.domain.domain}. (
          1  ; Serial
     604800  ; Refresh
      86400  ; Retry
    2419200  ; Expire
     604800  ; Negative Cache TTL
)
${'%-30s' % '@'} IN  NS  ns1.
${'%-30s' % 'ns1'} IN  A   ${host.ip4()}
% for zcru in zonecontainer.rununits:
${'%-30s'% zcru.name} IN  A   ${zcru.ip4()}
% endfor
